package TestAutoCode;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class RunFirstCodeSelenium {

    public static void main(String[] args) throws InterruptedException {
        // Cấu hình đường dẫn tới chromedriver.exe (đổi lại đường dẫn đúng với máy bạn)
        System.setProperty("webdriver.chrome.driver", "D:\\LeHoaiNam\\Selenium\\chromedriver-win64\\chromedriver.exe");

        // Khởi tạo trình điều khiển Chrome
        WebDriver driver = new ChromeDriver();

        // 1. Mở to cửa sổ trình duyệt
        driver.manage().window().maximize();

        // 2. Truy cập trang web Anhtester
        driver.get("https://anhtester.com");

        // 3. In tiêu đề của trang web
        System.out.println("Tiêu đề trang web: " + driver.getTitle());

        // 4. Chờ 2 giây
        Thread.sleep(2000);

        // 5. Click vào nút "TÌM KHÓA HỌC" nếu có
        try {
            WebElement button = driver.findElement(By.xpath("//a[contains(text(),'TÌM KHÓA HỌC')]"));
            button.click();
            System.out.println("Đã click vào nút TÌM KHÓA HỌC");
        } catch (Exception e) {
            System.out.println("Không tìm thấy nút TÌM KHÓA HỌC");
        }

        // 6. Chờ thêm 2 giây
        Thread.sleep(2000);

        // 7. Đóng trình duyệt
        driver.quit();
    }
}
